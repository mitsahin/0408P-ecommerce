{
  "info": {
    "name": "Workintech Ecommerce",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://workintech-fe-ecommerce.onrender.com"
    }
  ],
  "item": [
    {
      "name": "Get Roles",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/roles",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "roles"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "const data = pm.response.json();",
              "const customer = data.find((role) => role.code === 'customer');",
              "if (customer) {",
              "  pm.collectionVariables.set('customerRoleId', customer.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Signup (Customer/Admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jane Doe\",\n  \"email\": \"jane.doe+{{$timestamp}}@example.com\",\n  \"password\": \"Test1234!\",\n  \"role_id\": {{customerRoleId}}\n}\n"
        },
        "url": {
          "raw": "{{baseUrl}}/signup",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "signup"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Signup (Store)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Store Owner\",\n  \"email\": \"store.owner+{{$timestamp}}@example.com\",\n  \"password\": \"Test1234!\",\n  \"role_id\": 2,\n  \"store\": {\n    \"name\": \"Bandage Store\",\n    \"phone\": \"05551234567\",\n    \"tax_no\": \"T1234V123456\",\n    \"bank_account\": \"TR000000000000000000000000\"\n  }\n}\n"
        },
        "url": {
          "raw": "{{baseUrl}}/signup",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "signup"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
