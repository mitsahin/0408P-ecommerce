  "variable": [
    {
      "key": "baseUrl",
      "value": "https://workintech-fe-ecommerce.onrender.com"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "userEmail",
      "value": ""
    },
    {
      "key": "customerRoleId",
      "value": ""
    },
    {
      "key": "addressId",
      "value": ""
    },
    {
