    },
    {
      "name": "Login (Customer)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"customer@commerce.com\",\n  \"password\": \"123456\"\n}\n"
        },
        "url": {
          "raw": "{{baseUrl}}/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "login"
          ]
        }
      },
      "event": [
                    "pm.test('token is returned', function () {",
                    "  const data = pm.response.json();",
                    "  pm.expect(data.token).to.be.a('string').and.not.empty;",
                    "});",
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('status is 200', function () {",
                    "if (data.user && data.user.email) {",
                    "  pm.collectionVariables.set('userEmail', data.user.email);",
                    "}"
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "const data = pm.response.json();",
              "if (data.token) {",
              "  pm.collectionVariables.set('token', data.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Verify Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "{{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/verify",
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test('status is 200', function () {",
                    "  pm.response.to.have.status(200);",
                    "});",
                    "",
                    "const data = pm.response.json();",
                    "pm.test('user object exists', function () {",
                    "  pm.expect(data.user || data).to.exist;",
                    "});",
                    "if (data.token) {",
                    "  pm.collectionVariables.set('token', data.token);",
                    "}",
                    "if (data.user && data.user.email) {",
                    "  pm.collectionVariables.set('userEmail', data.user.email);",
                    "}"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
            "{{baseUrl}}"
          ],
          "path": [
            "verify"
          ]
        }
      }
    },
